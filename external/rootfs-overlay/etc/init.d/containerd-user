#!/bin/sh

NAME=containerd-user
DAEMON=/usr/bin/containerd
PIDFILE=/var/run/$NAME.pid
DAEMON_USER=1000
DAEMON_ARGS=""

[ -r /etc/default/$NAME ] && . /etc/default/$NAME $1

do_start() {
        echo -n "Starting $NAME: "
        start-stop-daemon --start --quiet --background --make-pidfile \
		--pidfile $PIDFILE --exec $DAEMON --user $DAEMON_USER -- $DAEMON_ARGS \
                && echo "OK" || echo "FAIL"
}

do_stop() {
        echo -n "Stopping $NAME: "
        start-stop-daemon --stop --quiet --pidfile $PIDFILE \
                && echo "OK" || echo "FAIL"
}

case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        restart)
                do_stop
                sleep 1
                do_start
                ;;
	*)
                echo "Usage: $0 {start|stop|restart}"
                exit 1
esac
